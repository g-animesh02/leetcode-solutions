Ques - https://leetcode.com/problems/minimum-size-subarray-sum/


class Solution {
    public int minSubArrayLen(int t, int[] num) {
        int i,n=num.length,sum=0,lptr=0,len=Integer.MAX_VALUE;
        for(i=0;i<n;i++){
            sum+=num[i];
            while(sum>=t){
                len=Math.min(len,i-lptr+1);
                sum-=num[lptr];
                lptr++;
            }
        }
        return len==Integer.MAX_VALUE?0:len;
    }
}
