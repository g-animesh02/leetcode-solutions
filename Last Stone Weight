Ques - https://leetcode.com/problems/last-stone-weight/


class Solution {
    public int lastStoneWeight(int[] stones) {
        if(stones.length == 1)
            return stones[0];
        Arrays.sort(stones);
        int len = stones.length-1;
        int m = stones[len];
        int n = stones[len-1];
        if(m == 0 || n == 0)
            return m;
        stones[len] = 0;
        stones[len-1] = Math.abs(m-n);
        return lastStoneWeight(stones);
        
    }
}
